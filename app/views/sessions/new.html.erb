<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag do  %>

      <%= label_tag :email %>
      <%= text_field_tag :guest_email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>First time guest? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>